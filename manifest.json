{
  "manifest_version": 2,

  "name": "Lightswitch for Philips Hue",
  "short_name": "Lightswitch",
  "description": "Lightswitch â€” a chrome extension for Philips Hue lights",
  "version": "1.4.2",

  "author": "Dmitry Sadakov (sadakov.com)",
  "icons": { "16": "img/lightswitch.logo.on.16.png",
             "32": "img/lightswitch.logo.on.32.png",
             "48": "img/lightswitch.logo.on.48.png",
            "128": "img/lightswitch.logo.on.128.png" },

  "permissions": [
    "https://www.meethue.com/",
    "http://www.colourlovers.com/"
  ],
  "background": {
    "scripts": [
      "js/libs/jquery-1.11.0.js",
      "js/libs/colors.js",
      "js/libs/sequence.js",
      "js/libs/palettes.js",
      "js/libs/scenes.js",
      "js/libs/hue.js",
      "js/libs/colorUtil.js",
      "js/libs/hueCommander.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/lightswitch.logo.128.png",
    "default_popup": "popup.htm"
  },
  "content_security_policy": "script-src 'self' https://*.list-manage.com https://ssl.google-analytics.com; object-src 'self';"
}